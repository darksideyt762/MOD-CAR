def print_rainbow_text(text):
    """Print text with rainbow colors."""
    colors = ["\033[31m", "\033[33m", "\033[32m", "\033[36m", "\033[34m", "\033[35m"]
    for i, char in enumerate(text):
        print(colors[i % len(colors)] + char, end="")
    print("\033[0m")

